<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body class="body-grid">
    <%- include("./partials/sidebar.ejs") %> <%-
    include("./partials/searchbar.ejs") %>
    <div class="content">
      <%- include("./partials/tools.ejs") %>

      <div
        class="sub-content flex flex-dir-col flex-just-cont-start flex-al-it-center gap1 oswald-400"
      >
        <div class="img-container">
          <img class="img-container" src="<%= artistInfo.imageurl %>" alt="" />
        </div>

        <ul
          class="flex flex-dir-col flex-just-cont-start flex-al-it-center gap1 li-deco"
        >
          <li><%= artistInfo.firstname %> <% if (artistInfo.lastname !== null){ %>
          <%= artistInfo.lastname %> 
          <%} %>
          (ID: <%=id%>)</li>
          <li>Date of birth : <%= artistInfo.dateb %></li>
          <% if (artistInfo.dated !== null ){ %>
          <li>Date of death : <%= artistInfo.dated %></li>
        <% } %>
          <li>Country: <%= artistInfo.country %></li>
          
        </ul>
        Albums
        <div class="flex gap1 flex-just-cont-center flex-wrap width-75">
          <% albums.forEach((album) => { %>
            <div class="flex flex-dir-col flex-al-it-center flex-basis">
              <a class="clickable" href="../albums/<%= id %>"><img class="img-container" src="<%= album.imageurl %>" alt=""></a>
              <span><%= album.title %></span>
            </div>
          <% }) %>

        </div>
        
      </div>
    </div>
  </body>
</html>
